{
  "name": "Timer",
  "version": "1.0",
  "description": "A timer to help you stay on time.",
  "permissions": ["tts", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Timer",
    "default_icon": {
      "16": "images/timer16.png",
      "32": "images/timer32.png",
      "48": "images/timer48.png",
      "128": "images/timer128.png"
    }
  },
  "icons": {
    "16": "images/timer16.png",
    "32": "images/timer32.png",
    "48": "images/timer48.png",
    "128": "images/timer128.png"
  },
  "manifest_version": 2
}